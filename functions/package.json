{
  "name": "functions",
  "scripts": {
    "build:dev": "rimraf ./lib/**/* && tsc --watch",
    "build": "rimraf ./lib/**/* && tsc -p tsconfig-build.json && rollup -c rollup.config.js && rimraf ./tmp",
    "serve:dev": "concurrently \"npm run build:dev\" \"firebase serve --only functions\"",
    "serve": "concurrently \"npm run build\" \"firebase serve --only functions\"",
    "shell": "concurrently \"npm run build:dev\" \"firebase functions:shell\"",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "tslint -p tsconfig.json src/**/*.ts -e tests/**/*.ts",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts"
  },
  "main": "lib/index.js",
  "dependencies": {
    "cors": "2.8.4",
    "crc": "^3.8.0",
    "firebase-admin": "^5.11.0",
    "firebase-functions": "^2.0.5",
    "firebase-functions-test": "0.1.0",
    "googleapis": "^27.0.0",
    "mandrill-api": "^1.0.45",
    "node-mailjet": "^3.2.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "tslint": "5.9.1",
    "typescript": "2.8.1",
    "concurrently": "3.5.1",
    "@types/cors": "2.8.3",
    "@types/chai": "4.1.2",
    "@types/mocha": "5.0.0",
    "@types/sinon": "4.3.0",
    "@types/sinon-chai": "2.7.29",
    "chai": "4.1.2",
    "mocha": "5.0.5",
    "ts-node": "5.0.1",
    "sinon": "4.5.0",
    "sinon-chai": "3.0.0",
    "rollup": "0.57.1",
    "rollup-plugin-node-resolve": "3.3.0",
    "rimraf": "2.6.2"
  },
  "private": true
}
